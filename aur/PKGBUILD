pkgname=scip
pkgver=1.0.0
pkgrel=1
pkgdesc="Serial Console Interfacing Program"
arch=('x86_64')
url="https://gitlab.com/w0lff/serial-console"
license=('MIT')
makedepends=('rust' 'git')
source=("$pkgname"::"git+$url.git")
sha1sums=('SKIP')

build() {
  cd "$srcdir/$pkgname"
  cargo build --locked --profile lto
}

package() {
  cd "$srcdir/$pkgname"
  install -Dm755 target/lto/$pkgname "$pkgdir/usr/bin/scip"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

# vim:set ts=2 sw=2 et:
